@article{Henriksson-Larsén19992097,
  title = {Training and Participation in Athletic Events during Pregnancy; Physical Exercise Beneficial for Both Mother and Child [{{Tr\"aning}} Och T\"avling under Graviditet Och Efter Barnaf\"odande: {{Fysisk}} Tr\"aning \"Ar Bra F\"or B\aa de Mamman Och Barnet]},
