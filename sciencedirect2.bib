author = {Nadine Helle and Claus Barkmann and Stephan Ehrhardt and Axel {von der Wense} and Yvonne Nestoriuc and Carola Bindt},
keywords = {Postpartum anxiety, Maternal/paternal, Preterm birth, Risk factors},
abstract = {Background
